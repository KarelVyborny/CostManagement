@model IEnumerable<CostManagementSystem.Web.Models.CostApproval.CostApprovalReadOnlyVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCode.CostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCode.CostGroup)
            </th>
                      <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCode.CostName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCode.CostGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Period.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName) @Html.DisplayFor(modelItem => item.Employee.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    <a asp-controller="CostRequest" asp-action="Create" class="btn btn-outline-success">Request</a>

                </td>
            </tr>
        }
    </tbody>
</table>
